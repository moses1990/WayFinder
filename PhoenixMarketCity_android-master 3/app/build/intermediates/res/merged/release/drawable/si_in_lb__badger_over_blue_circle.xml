                  xmlns:android = "http://schemas.android.com/apk/res/android"
                  android:shape = "oval"
                  >
                  <size
                        android:width = "11dp"
                        android:height = "11dp"
                        />

                  <solid android:color = "@color/badger_red_color" />
            </shape >
