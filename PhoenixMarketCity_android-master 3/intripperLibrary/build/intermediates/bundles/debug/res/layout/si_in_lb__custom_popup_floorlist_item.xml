<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
      android:id = "@+id/floorNumberContainer"
      xmlns:android = "http://schemas.android.com/apk/res/android"
      android:layout_width = "match_parent"
      android:layout_height = "wrap_content"
      android:gravity = "center"
      >

      <RelativeLayout
            android:id = "@+id/innerFloorContainer"
            android:layout_width = "40dp"
            android:layout_height = "40dp"
            android:background = "@drawable/si_in_lb__floor_selector_background"
            >

            <TextView
                  android:id = "@+id/resultCountBadger"
                  android:layout_width = "wrap_content"
                  android:layout_height = "wrap_content"
                  android:layout_centerInParent = "true"
                  android:background = "@drawable/si_in_lb__badger_over_blue_circle"
                  android:gravity = "end"
                  android:paddingRight = "3.7dp"
                  android:paddingTop = "0dp"
                  android:text = "3"
                  android:textColor = "#FFF"
                  android:textSize = "7sp"
                  android:textStyle = "bold"
                  android:visibility = "invisible"
                  />

            <TextView
                  android:id = "@+id/floorNumber"
                  android:layout_width = "wrap_content"
                  android:layout_height = "match_parent"
                  android:layout_centerHorizontal = "true"
                  android:gravity = "center"
                  android:text = "0"
                  android:textColor = "@color/si_in_lb__white"
                  android:textSize = "16sp"
                  />

            <View
                  android:id = "@+id/separator"
                  android:layout_width = "25dp"
                  android:layout_height = "1dp"
                  android:layout_alignParentBottom = "true"
                  android:layout_centerHorizontal = "true"
                  android:background = "@color/grey_box_border_color"
                  android:visibility = "gone"
                  />
      </RelativeLayout >

</RelativeLayout >