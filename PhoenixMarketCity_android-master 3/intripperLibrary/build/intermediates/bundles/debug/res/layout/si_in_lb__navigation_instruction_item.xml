<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content">

    <ImageView
        android:id = "@+id/navigation_icon"
        android:layout_width = "20dp"
        android:layout_height = "20dp"
        android:layout_gravity = "center_vertical"
        android:layout_marginRight = "20dp"
        android:layout_marginTop = "20dp"
        android:layout_marginLeft="20dp"
        android:src = "@drawable/ic_turn_destination_charcoal_grey"/>


    <TextView
        android:id = "@+id/step"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignTop = "@+id/navigation_icon"
        android:layout_marginBottom = "20dp"
        android:layout_marginRight = "10dp"
        android:layout_toEndOf = "@+id/navigation_icon"
        android:layout_toRightOf = "@+id/navigation_icon"
        android:gravity = "center_vertical"
        android:text = "Instruction"
        android:textColor = "@color/charcoal_grey"/>

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below = "@+id/step"
        android:layout_toEndOf = "@+id/navigation_icon"
        android:layout_toRightOf = "@+id/navigation_icon"
        android:orientation = "horizontal">

        <TextView
            android:id = "@+id/distance_mtr"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginRight = "5dp"
            android:text = "Distance"
            android:textColor = "@color/charcoal_grey"/>

        <View
            android:layout_width = "0dp"
            android:layout_height = "0.5dp"
            android:layout_gravity = "center_vertical"
            android:layout_weight = "1"
            android:background = "@color/charcoal_grey"/>
    </LinearLayout>

</RelativeLayout>