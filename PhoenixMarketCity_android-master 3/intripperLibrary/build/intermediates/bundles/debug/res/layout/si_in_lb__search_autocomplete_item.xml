<?xml version="1.0" encoding="utf-8"?>
<com.sanginfo.intripper.libraryproject.components.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:il_mrl_rippleAlpha="0.2"
    app:il_mrl_rippleColor="@color/app_primary_color"
    app:il_mrl_rippleHover="true"
    app:il_mrl_rippleOverlay="true">

    <RelativeLayout
        android:id="@+id/rel_list_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@color/si_in_lb__transparent"
        android:paddingBottom="7dip"
        android:paddingTop="7dip">

        <!-- <ImageView
             android:id="@+id/category_image"
             android:layout_width="50sp"
             android:layout_height="50sp"
             android:layout_alignParentLeft="true"
             android:layout_centerInParent="true"
             android:contentDescription="@string/action_settings"
             android:paddingBottom="5dp"
             android:src="@drawable/clothing_icon" />-->
        <TextView
            android:id="@+id/search_result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="33dip"
            android:background="@color/si_in_lb__transparent"
            android:text="Search result here"
            android:textColor="@color/grey_text_color"
            android:textSize="@dimen/offer_title_size" />

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/search_result_text"
            android:layout_marginRight="33dip"
            android:layout_marginTop="5dip"
            android:background="@color/si_in_lb__transparent"
            android:text="Search result here"
            android:textColor="@color/charcoal_grey"
            android:textSize="@dimen/description_text_size"
            android:visibility="gone"
            />

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:alpha="0.5"
            android:background="@color/si_in_lb__transparent"
            android:contentDescription="@string/action_settings"
            android:padding="4dip"
            android:src="@drawable/si_in_lb__ic_action_next_item" />
    </RelativeLayout>
</com.sanginfo.intripper.libraryproject.components.MaterialRippleLayout>
