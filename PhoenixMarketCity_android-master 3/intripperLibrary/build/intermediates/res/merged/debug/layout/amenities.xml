<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:visibility="invisible"
    android:id="@+id/amenitiesid"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="-50dp"
        android:layout_below="@+id/amenitiesImage"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="233dp"
            android:id="@+id/vertical_list"
            android:background="#ffffff"
            android:visibility="visible"/>

        <Button
            android:id="@+id/amenitiesBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="right"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:text="HOMESCREEN"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/amenitiesheader"
        android:id="@+id/amenitiesImage"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
