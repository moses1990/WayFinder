<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/customerSupport"
    android:visibility="invisible"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="#ffffff"
        android:layout_marginTop="-50dp"
        android:layout_below="@+id/customerSupportImage"
        android:id="@+id/customerSupportRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <TextView
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/headerID"
        android:text="Please state your query in the contact form below"/>

    <LinearLayout
        android:id="@+id/twoDetails"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/headerID"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin = "10dp"
                android:text="NAME"/>
            <EditText
                android:imeActionLabel ="Back"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:background="@drawable/border"
                android:padding="10dp"
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Please Enter Your Name"/>



        </LinearLayout>

        <LinearLayout

            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin = "10dp"
                android:text="PHONE"/>
            <EditText
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:background="@drawable/border"
                android:padding="10dp"
                android:id="@+id/phoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Please Enter Your Phone Number"/>



        </LinearLayout>

    </LinearLayout>


    <TextView
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin = "10dp"
        android:id="@+id/queryLabel"
        android:layout_below="@+id/twoDetails"
        android:text="QUERY"/>

    <EditText
        android:imeOptions="actionDone"
        android:textColor="#000000"
        android:id="@+id/qweryEditText"
        android:inputType="textMultiLine"
        android:layout_below="@+id/queryLabel"
        android:layout_margin="10dp"
        android:gravity="top|left"
        android:background="@drawable/border"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scrollbars="vertical"
        android:hint="Please Enter Your Query"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qweryEditText"
        android:background="#3792A3"
        android:text="Submit"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/submitButton"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/customerSupportBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_below="@+id/submitButton"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:text="HOMESCREEN"/>



    </RelativeLayout>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/customersupportheader"
        android:id="@+id/customerSupportImage"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
