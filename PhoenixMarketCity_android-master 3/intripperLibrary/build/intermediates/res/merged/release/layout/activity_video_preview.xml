<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:id="@+id/videoOverlay"
    android:elevation="10dp"
    tools:context="com.sanginfo.intripper.libraryproject.ui.VideoPreviewActivity">

    <VideoView
        android:id="@+id/myVideoView"
        android:layout_centerInParent="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <!-- android:layout_alignParentTop="true"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentRight="true"-->

    <RelativeLayout
        android:background="#AE9473"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="70dp"
        android:layout_height="320dp">
        
        <ImageView
            android:id="@+id/wayFinderLocaterImageID"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/wayfinderlocater"/>

        <TextView
            android:id="@+id/wayFinderTextView"
            android:maxLines="9"
            android:singleLine="false"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_below="@+id/wayFinderLocaterImageID"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="W \nA \nY\nF\n I\nN\nD\nE\nR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:background="@android:color/transparent"
            android:id="@+id/wayFinderButtonID"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</RelativeLayout>
