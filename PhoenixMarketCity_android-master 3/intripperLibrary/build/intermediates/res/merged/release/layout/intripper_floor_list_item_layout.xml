<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floorNumberContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <RelativeLayout
        android:id="@+id/innerFloorContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/intripper_floor_selector_background" >

        <TextView
            android:id="@+id/floorNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/intripper_sdk_default_floor_name"
            android:textColor="@color/intripper_orange_text_color"
            android:textSize="16sp" />

        <View
            android:id="@+id/separator"
            android:layout_width="25dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/intripper_grey_color"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>