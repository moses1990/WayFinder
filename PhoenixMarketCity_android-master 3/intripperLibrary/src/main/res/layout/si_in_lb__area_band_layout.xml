<?xml version="1.0" encoding="utf-8"?>

<!-- Map area detail band starts -->
<RelativeLayout
      android:id = "@+id/map_area_info_container"
      xmlns:android = "http://schemas.android.com/apk/res/android"
      android:layout_width = "match_parent"
      android:layout_height = "100dp"
      android:layout_alignParentBottom = "true"
      android:elevation = "10dp"
      android:visibility = "invisible"
      >

      <RelativeLayout
            android:id = "@+id/map_area_info"
            android:layout_width = "match_parent"
            android:layout_height = "70dp"
            android:layout_alignParentBottom = "true"
            android:layout_marginTop = "30dp"
            android:background = "@drawable/si_in_lb__get_directions_bottom_bar_bg"
            android:visibility = "visible"
            >

            <LinearLayout
                  android:id = "@+id/map_area_detail_parent"
                  android:layout_width = "wrap_content"
                  android:layout_height = "wrap_content"
                  android:layout_centerVertical = "true"
                  android:layout_marginLeft = "10dip"
                  android:clickable = "true"
                  android:orientation = "vertical"
                  >

                  <TextView
                        android:id = "@+id/map_area_name"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_marginLeft = "10dip"
                        android:layout_toRightOf = "@+id/store_img"
                        android:text = "Macy&apos;s"
                        android:textColor = "@color/primary_green_color"
                        android:textSize = "20sp"
                        />

                  <TextView
                        android:id = "@+id/map_area_timing"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_below = "@+id/map_area_name"
                        android:layout_marginLeft = "10dip"
                        android:layout_toRightOf = "@+id/store_img"
                        android:text = "10AM - 9PM"
                        android:textColor = "@color/grey_text_color"
                        />
            </LinearLayout >

      </RelativeLayout >

      <ImageView
            android:id = "@+id/start_map_area_icon"
            android:layout_width = "60dp"
            android:layout_height = "60dp"
            android:layout_alignParentRight = "true"
            android:layout_alignParentTop = "true"
            android:layout_marginRight = "5dp"
            android:background = "@drawable/si_in_lb__blue_circular_background_presseffect_drawable"
            android:elevation = "5dp"
            android:padding = "13dp"
            android:src = "@drawable/si_in_lb__ic_maps_navigation"
            />
</RelativeLayout >
      <!-- Map area detail band ends -->