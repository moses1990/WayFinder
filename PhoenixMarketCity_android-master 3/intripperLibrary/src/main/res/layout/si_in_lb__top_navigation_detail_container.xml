<?xml version="1.0" encoding="utf-8"?>

<!-- navigation detail starts -->

<RelativeLayout
      android:id = "@+id/top_navigation_detail_container"
      xmlns:android = "http://schemas.android.com/apk/res/android"
      android:layout_width = "match_parent"
      android:layout_height = "103dp"
      android:background = "@drawable/si_in_lb__get_directions_bar_bg"
      android:elevation = "10dp"
      android:paddingBottom = "15dip"
      android:paddingLeft = "10dip"
      android:paddingRight = "10dip"
      android:paddingTop = "10dip"
      android:visibility = "invisible"
      >

      <LinearLayout
            android:id = "@+id/navigation_image_container"
            android:layout_width = "wrap_content"
            android:layout_height = "match_parent"
            android:layout_alignParentLeft = "true"
            android:layout_centerHorizontal = "true"
            android:orientation = "vertical"
            >

            <ImageView
                  android:id = "@+id/go_back_icon"
                  android:layout_width = "32dp"
                  android:layout_height = "22dp"
                  android:layout_marginTop = "10dp"
                  android:src = "@drawable/si_in_lb__ic_action_forward_white_left"
                  />

      </LinearLayout >

      <RelativeLayout
            android:id = "@+id/AutoTextViewContainer"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_centerInParent = "true"
            android:layout_marginLeft = "10dip"
            android:layout_toRightOf = "@+id/navigation_image_container"
            >

            <TextView
                  android:id = "@+id/source_location_hint_text"
                  android:layout_width = "wrap_content"
                  android:layout_height = "35dp"
                  android:background = "@color/blue_dark"
                  android:padding = "7dp"
                  android:text = "from "
                  android:textColor = "@color/offer_card_light_grey"
                  android:textSize = "15dip"
                  >
            </TextView >

            <AutoCompleteTextView
                  android:id = "@+id/source_location"
                  style = "@style/si_in_lb__AutoCompleteTextViewAppTheme"
                  android:layout_width = "match_parent"
                  android:layout_height = "35dp"
                  android:layout_marginRight = "4dp"
                  android:layout_toRightOf = "@+id/source_location_hint_text"
                  android:background = "@color/blue_dark"
                  android:dropDownHorizontalOffset = "-120dp"
                  android:dropDownSelector = "@drawable/si_in_lb__background_press_effect"
                  android:dropDownWidth = "match_parent"
                  android:hint = "Choose source"
                  android:imeOptions = "actionNext"
                  android:inputType = "textNoSuggestions"
                  android:paddingBottom = "5dp"
                  android:paddingLeft = "5dp"
                  android:paddingTop = "4dp"
                  android:singleLine = "true"
                  android:textColor = "@color/si_in_lb__white"
                  android:textColorHint = "@color/offer_card_light_grey"
                  android:textCursorDrawable = "@drawable/si_in_lb__color_cursor_grey"
                  android:textSize = "15dip"
                  />

            <AutoCompleteTextView
                  android:id = "@+id/destination_location"
                  style = "@style/si_in_lb__AutoCompleteTextViewAppTheme"
                  android:layout_width = "match_parent"
                  android:layout_height = "35dp"
                  android:layout_alignParentLeft = "true"
                  android:layout_alignParentStart = "true"
                  android:layout_below = "@+id/source_location_hint_text"
                  android:layout_marginRight = "4dp"
                  android:layout_marginTop = "5dp"
                  android:background = "@color/blue_dark"
                  android:dropDownHorizontalOffset = "-120dp"
                  android:dropDownSelector = "@drawable/si_in_lb__background_press_effect"
                  android:dropDownWidth = "match_parent"
                  android:hint = "Choose destination"
                  android:imeOptions = "actionDone"
                  android:inputType = "textNoSuggestions"
                  android:paddingBottom = "5dp"
                  android:paddingLeft = "7dp"
                  android:paddingTop = "2dp"
                  android:singleLine = "true"
                  android:textColor = "@color/si_in_lb__white"
                  android:textColorHint = "@color/offer_card_light_grey"
                  android:textCursorDrawable = "@drawable/si_in_lb__color_cursor_grey"
                  android:textSize = "15dip"
                  />

      </RelativeLayout >

</RelativeLayout >
      <!-- navigation detail ends -->